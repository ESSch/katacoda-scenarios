    "assets": {
      "host01": [
        {"file": "load.sh", "target": "/usr/local/bin/", "chmod": "+x"},

        {"file": "checklist.sh", "target": "/usr/local/bin/", "chmod": "+x"},
        {"file": "k8s_probes_readiness.rego", "target": "/tmp"},
